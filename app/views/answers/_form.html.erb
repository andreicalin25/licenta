<%= form_with(model: answer) do |form| %>
  <% if answer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
        <% answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :question_id %>
  <%= form.hidden_field :user_id %>

  <div>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_area :text, :class => "form-control"%>
  </div>

  <div class="d-flex my-3">
    <%= form.label :anonymous, style: "display: block", :class => "me-3" %>
    <%= form.check_box :anonymous %>
  </div>

  <div>
    <%= form.label :files, style: "display: block" %>
    <%= form.file_field :files, multiple: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<% @answer.files.each do |file| %>
  <div>
    <%= file.filename %>
    <%= button_to 'Remove file', answer_remove_file_path(@answer, file_id: file.id) %>
  </div>
<% end %>