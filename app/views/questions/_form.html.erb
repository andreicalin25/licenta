<%= form_with(model: question) do |form| %>
  <% if question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :enrollment, style: "display: block" %>
    <%= form.select :enrollment_id, @my_enrollments.map { |t| [t.teachers_subject.teacher.last_name + " " + t.teachers_subject.subject.subject_name + " " + t.teachers_subject.subject.activity, t.id]}, {}  %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details, style: "display: block" %>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.label :anonymous, style: "display: block" %>
    <%= form.check_box :anonymous %>
  </div>

  <div>
    <%= form.label :importance, style: "display: block" %>
    <%= form.number_field :importance %>
  </div>

  <div>
    <%= form.label :files, style: "display: block" %>
    <%= form.file_field :files, multiple: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<% @question.files.each do |file| %>
  <div>
    <%= file.filename %>
    <%= button_to 'Remove file', question_remove_file_path(@question, file_id: file.id) %>
  </div>
<% end %>
