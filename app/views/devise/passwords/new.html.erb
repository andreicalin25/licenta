
<div class="row justify-content-md-center mt-5 me-0">
  <div class="card col-4 mt-5">
    <div class="card-body">
      <div class="image row justify-content-md-center mx-5 mb-5">
        <%= image_tag "fmi-logo.png" %>
      </div>
      <!--      <h2>Log in</h2>-->

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field my-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="actions d-grid gap-2 col mx-auto">
          <%= f.submit "Send me password reset instructions", class: "btn btn-outline-primary my-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

